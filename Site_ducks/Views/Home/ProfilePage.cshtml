@model Site_ducks.Models.User

@{
    Layout = "_LayoutProfilePage";
}
<div class="shapka">
    <a href="index.html" id="main_logo">
        <img class="dbotton dark-change-background-menu"
             src="~/images/logofot.png">
    </a>
    <p class="portalst dark-change-text">
        <a href="index.html" id="student_portal"> <font>Портал стажера</font></a>
    </p>
    <form>
        <input class="dark-change-border" placeholder="Search..." type="text">
        <button class="submit button-search dark-change-border search-top"></button>
    </form>
    <img class="catletit" src="~/images/catletit.png" width=250>
    <img class="nazad" src="~/images/catletitnazad.png" width=250>

    <div class="accaunt-flex">
        <div class="main_profile">
            <a href="../index.html" class="MyPhoto">
                <img class="pic_with_text_near1 dark-change-border" src="~/images/kianu.jfif">
            </a>

            <a href="Page_profile/profile_page.html" style="text-decoration: none;">
                <div class="big-name1 dark-change-text MyName">Kianu</div>
            </a>

            <button class="menu-btn"></button>
        </div>
        <dialog class="mini-window-in-angle">
            <p><a class="text-in-menu link-in-menu" href="Page_profile/profile_page.html">Настройки</a></p>
            <p><a class="text-in-menu link-in-menu" href="/Account/Logout">Выход</a></p>
            <p>
                <div class="dark-theme">
                    <div class="dark-text text-in-menu">Тёмная тема</div>
                    <div class="toggle-button-cover">
                        <div class="button r" id="button-1">
                            <input class="checkbox" type="checkbox">
                            <div class="knobs"></div>
                            <div class="layer"></div>
                        </div>
                    </div>
                </div>
            </p>
            <button id="close"><img src="~/images/X.svg"></button>
        </dialog>
    </div>

    <div class="menu dark-change-background-menu dark-change-text">
        <nav id="menu">
            <ul id="left_menu">
                <li><a href="Page_departments/departments.html"> Отделы</a></li>
                <li>Форум</li>
                <li>Впечатления</li>
                <li>Рабочие истории</li>
                <li>Полезная информация</li>
                <li>Руководство</li>
                <li>Партнеры</li>
                <li>Контакты</li>
                <img src="~/images/cat.png" width=270 />
            </ul>
        </nav>
    </div>
</div>

<div class="information">
    <div class="semi-body">
        <div class="main_profile">
            <img class="pic_with_text_near_big dark-change-border" src="@Model.Photo" />
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <table>
                    <tr>
                        <td>File:</td>
                        <td>
                            <input type="file" name="File" id="file" />
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td><input type="submit" name="submit" value="Upload" /></td>
                    </tr>
                </table>
            }
            <div class="big-name dark-change-text">
                <b>@Model.Email</b>

            </div>
        </div>
        <p>
            <div class="department-body">
                <div class="text phil departament-text dark-change-text">
                    @Model.Department
                </div>
            </div>
        <p>
        <p>
            <div class="out-block">
                <div class="text text-in phil dark-change-text">
                    
                    <h4 class="high">О себе:</h4>
                    @Model.Information
                </div>
            </div>
    </div>
    <div class='up-button'>
        <img src='~/images/up.svg'>
    </div>
</div>

